extends layout

block content
	h2 LOCALS 
		small upcoming events over the next week
	div(style="margin-left:20px")
		each day in beans
			if day.evs.length 
				h3 #{day.date}
			each local in day.evs
				div(class="col-md-4" style="display:inline-block")
					div(class="card border-dark mb-3" style="margin-top:10px;")
						div(class="card-header") #{local.eventName}
						div(class="card-body")
							p(class="card-text") 
								pre #{local.description}
	if evos.length
		hr
		h2 EVENTS
		div(style="margin-left:20px")
			each evnt in evos
				div(class="col-md-4" style="display:inline-block")
					div(class="card border-dark mb-3" style="margin-top:10px;")
						div(class="card-header") #{evnt.eventName}
						div(class="card-body")
							p(class="card-text") #{evnt.eventDate}
							p(class="cart-text")
								a(href=evnt.pageLink target="_blank") Event Link
							p(class="card-text") 
								pre #{evnt.description}
	hr
	h2 SOCIAL MEDIA
	div(style="margin-left:20px")

		div(class="col-md-2" style="display:inline-block")
			h3 Facebook
			each fb in facebook
				div
					a(href=fb.url target="_blank") #{fb.pageName}

		div(class="col-md-2" style="display:inline-block")
			h3 Twitch
			each fb in twitch
				div
					a(href=fb.url target="_blank") #{fb.pageName}
		div(class="col-md-2" style="display:inline-block")
			h3 Twitter
			each fb in twitter
				div
					a(href=fb.url target="_blank") #{fb.pageName}
		div(class="col-md-2" style="display:inline-block")
			h3 YouTube
			each fb in youtube
				div
					a(href=fb.url target="_blank") #{fb.pageName}
		div(class="col-md-2" style="display:inline-block")
			h3 Instagram
			each fb in instagram
				div
					a(href=fb.url target="_blank") #{fb.pageName}
		div(class="col-md-2" style="display:inline-block")
			h3 Mixer
			each fb in mixer
				div
					a(href=fb.url target="_blank") #{fb.pageName}
		